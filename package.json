{
  "private": true,
  "scripts": {
    "lint": "eslint *.js src/**/*.js && stylelint src/**/*.css",
    "test": "yarn lint & yarn build && yarn spell",
    "clean": "rimraf dist/",
    "start": "parcel serve src/index.pug --open",
    "build": "yarn clean && NODE_ENV=production ./build.js"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "postcss-pxtorem": {
        "propList": [
          "*"
        ],
        "selectorBlackList": [
          "html",
          ".photo"
        ],
        "rootValue": 20
      },
      "autoprefixer": {}
    }
  },
  "staticPath": "public",
  "engines": {
    "node": "^11.0.0"
  },
  "browser": {
    "node_modules/three/src/renderers/webvr/*": "./empty.js"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/node",
    "rules": {
      "security/detect-non-literal-regexp": "off",
      "security/detect-unsafe-regex": "off",
      "node/no-unpublished-require": "off"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.css": [
      "stylelint --fix",
      "git add"
    ],
    "*.svg": [
      "svgo",
      "git add"
    ]
  },
  "devDependencies": {
    "@logux/eslint-config": "^28.0.0",
    "autoprefixer": "^9.5.0",
    "chalk": "^2.4.2",
    "css-mqpacker": "^7.0.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-import-helpers": "^0.1.4",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "fast-xml-parser": "^3.12.16",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-static-files-copy": "^2.0.0",
    "postcss": "^7.0.14",
    "postcss-hexrgba": "^1.0.1",
    "postcss-media-minmax": "^4.0.0",
    "postcss-nested": "^4.1.2",
    "postcss-pxtorem": "^4.0.1",
    "posthtml": "^0.11.3",
    "pug": "^2.0.3",
    "strip-debug": "^4.0.0",
    "stylelint": "^9.10.1",
    "stylelint-config-recess-order": "^2.0.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^2.1.0",
    "svgo": "^1.2.0",
    "yaspeller": "^5.0.1"
  }
}
