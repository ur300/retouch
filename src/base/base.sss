*
  padding: 0
  margin: 0

html
  font-family: Arial, sans-serif
  line-height: 1.4
  font-size: 20px

  @media (width >= 2200px)
    font-size: 30px

  @media (width < 1400px)
    font-size: 16px

  @media (width < 1120px)
    font-size: 14px

  @media (width <= 980px)
    font-size: 16px

body
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

  &.is-grabbing
    cursor: grabbing

a, button
  &:focus
    outline: none

  &::-moz-focus-inner
    border: 0

a:active
  transition: none
  &::before
    transition: none

::selection
  background: rgba(#006efe, 0.2)

@media (prefers-reduced-motion: reduce)
  *,
  *::before
    transition: none !important

@media (prefers-color-scheme: dark)
  body
    background: black
    color: white